{
    "variables":{
        "version": "0.7",
        "debian_release": "jessie"
    },
    "builders":[
        {
            "type": "amazon-ebs",
            "region":"us-east-2",
            "instance_type": "t2.medium",
            "ami_name": "beevalabs-k8s-nvidia-{{ user `debian_release` }}-{{ user `version` }}",
            "ssh_username": "admin",
            "tags":{
                "OS_Version":"Debian",
                "Release":"Jessie"
            },
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "k8s-1.8-debian-jessie-amd64-hvm-ebs-2017-12-02",
                    "root-device-type": "ebs"
                },
                "owners": ["383156758163"],
                "most_recent": true
            }
        }
    ],
    "provisioners":[
        {
            "type":"file",
            "source": "setup_vm.sh",
            "destination":"/tmp/setup_vm.sh"
        },
        {
            "type":"file",
            "source": "nvidia-devicefiles.sh",
            "destination":"/tmp/nvidia-devicefiles.sh"
        },
        {
            "type":"file",
            "source": "nvidia-devicefiles.service",
            "destination":"/tmp/nvidia-devicefiles.service"
        },
        {
            "type":"shell",
            "inline":[
                "sudo /tmp/setup_vm.sh",
                "sudo cp /tmp/nvidia-devicefiles.sh /usr/local/bin",
                "sudo cp /tmp/nvidia-devicefiles.service /etc/systemd/system/nvidia-devicefiles.service",
                "sudo systemctl daemon-reload",
                "sudo systemctl enable nvidia-devicefiles"
            ]
        }
    ]
}

